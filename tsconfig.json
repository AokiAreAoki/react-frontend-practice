{
  "include": [
    "src/**/*.ts",
    "src/**/*.js",
    "src/App.tsx",
    "src/index.tsx"
  ],
  "exclude": [
    "node_modules",
    "build"
  ],
  "compilerOptions": {
    "strictNullChecks": true,
    "checkJs": true,
    "module": "ES6",
    "jsx": "react",
    "esModuleInterop": true,
    "moduleResolution": "nodenext",
    "resolveJsonModule": true,
    "outDir": "build",
    "rootDir": "./",
    "baseUrl": "./",
    "sourceMap": true,
  },
}